unit uFizzBuzz;

interface

type
  IFizzBuzz = interface
    function escreverSaida(): string;
    function getFizz(aluno: Integer; saida: string): string;
    function getBuzz(aluno: Integer; saida: string): string;
    function getFizzBuzz(aluno: Integer; saida: string): string;
  end;

  TFizzBuzz = class(TInterfacedObject, IFizzBuzz)
  private
    function escreverSaida(aluno: Integer;): string;
    function getFizz(aluno: Integer; saida: string): string;
    function getBuzz(aluno: Integer; saida: string): string;
    function getFizzBuzz(aluno: Integer; saida: string): string;
  public
    constructor create(aluno: Integer);
    class function new(aluno: Integer): IFizzBuzz;
  end;

implementation

uses
  System.SysUtils;

class function TFizzBuzz.new(aluno: Integer): IFizzBuzz;
begin
  Result := Self.create(aluno);
end;

constructor TFizzBuzz.create(aluno: Integer);
begin
  Self.FAluno := aluno;
end;

function TFizzBuzz.escreverSaida(): string;
begin
  Result := IntToStr(Self.FAluno);
  Result := Self.getFizz(Self.FAluno, Result);
  Result := Self.getBuzz(Self.FAluno, Result);
  Result := Self.getFizzBuzz(Self.FAluno, Result);
end;

function TFizzBuzz.getBuzz(aluno: Integer; saida: string): string;
begin

end;

function TFizzBuzz.getFizz(aluno: Integer; saida: string): string;
begin

end;

function TFizzBuzz.getFizzBuzz(aluno: Integer; saida: string): string;
begin

end;

end.
